<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>
        Banking Online
    </display-name>
    <description>
        The proposed system implementation, banking online with the user's most
        common functions online.
    </description>

    <!-- The definitions for the banking application below. -->
    <servlet>
        <servlet-name>
            HomePage
        </servlet-name>
        <servlet-class>
            BankServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            ContactsPage
        </servlet-name>
        <servlet-class>
            ContactsServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            AccountsPage
        </servlet-name>
        <servlet-class>
            AccountsServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            SendMoneyPage
        </servlet-name>
        <servlet-class>
            SendMoneyServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            ViewTransactionsPage
        </servlet-name>
        <servlet-class>
            ViewTransactionsServlet
        </servlet-class>
    </servlet>

    <servlet>
        <servlet-name>
            LoginPage
        </servlet-name>
        <servlet-class>
            LoginServlet
        </servlet-class>
    </servlet>
    
    <!-- Servlet mappings for the servlets. -->
    <servlet-mapping>
        <servlet-name>
            HomePage
        </servlet-name>
        <url-pattern>
           /HomePage
        </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>
            ContactsPage
        </servlet-name>
        <url-pattern>
            /ContactsPage
        </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>
            AccountsPage
        </servlet-name>
        <url-pattern>
            /AccountsPage
        </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>
            SendMoneyPage
        </servlet-name>
        <url-pattern>
            /SendMoneyPage
        </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>
            ViewTransactionsPage
        </servlet-name>
        <url-pattern>
            /ViewTransactionsPage
        </url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>
            LoginPage
        </servlet-name>
        <url-pattern>
            /LoginPage
        </url-pattern>
    </servlet-mapping>
</web-app>